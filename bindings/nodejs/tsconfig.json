{
    "compilerOptions": {
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ],
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "out"
    },
    "include": [
        "lib/**/*"
    ]
}