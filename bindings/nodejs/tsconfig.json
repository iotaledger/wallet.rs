{
    "compilerOptions": {
        "lib": ["es2019", "DOM"],
        "declaration": true,
        "declarationMap": true,
        "target": "es2019",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "out"
    },
    "include": ["lib/**/*", "types/**/*"]
}
