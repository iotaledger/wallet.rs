{
    "compilerOptions": {
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ],
        "declaration": true,
        "target": "es2019",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "out"
    },
    "include": [
        "lib/**/*",
        "types/**/*",
    ]
}