{
  "name": "@iota/wallet",
  "version": "0.0.1",
  "description": "Node.js binding to the wallet library",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iotaledger/wallet.rs"
  },
  "author": "Lucas Nogueira <lucas.nogueira@iota.org>",
  "license": "MIT",
  "dependencies": {
    "neon-cli": "^0.4.0",
    "prebuild-install": "^5.3.3"
  },
  "scripts": {
    "install": "prebuild-install --tag-prefix nodejs-binding-v || yarn rebuild",
    "build:neon": "neon build --release && node scripts/move-lib.js",
    "rebuild": "yarn build:neon && node scripts/strip.js",
    "prebuild:node": "prebuild -t 10.0.0 -t 12.0.0 -t 14.0.0 -t 15.0.0 --prepack scripts/neon-build.js --strip",
    "prebuild:electron": "prebuild -t 8.2.1 -t 9.4.1 -r electron --prepack scripts/neon-build.js --strip"
  },
  "devDependencies": {
    "prebuild": "^10.0.1"
  }
}
